<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Debug"
      internalLogFile="logs/internal-nlog-dev.txt">

  <!-- Development Configuration - More verbose logging and console output -->
  
  <variable name="devLayout" value="${longdate} [${level:uppercase=true:padding=-5}] ${logger:shortName=true}:${callsite:methodName=true} - ${message} ${exception:format=tostring}" />

  <targets>
    <!-- Colored Console for development -->
    <target xsi:type="ColoredConsole" 
            name="devConsole"
            layout="${time} [${level:uppercase=true:padding=-5}] ${logger:shortName=true} - ${message} ${exception:format=tostring}"
            useDefaultRowHighlightingRules="false">
      <highlight-row condition="level == LogLevel.Trace" foregroundColor="DarkGray" />
      <highlight-row condition="level == LogLevel.Debug" foregroundColor="Gray" />
      <highlight-row condition="level == LogLevel.Info" foregroundColor="White" />
      <highlight-row condition="level == LogLevel.Warn" foregroundColor="Yellow" />
      <highlight-row condition="level == LogLevel.Error" foregroundColor="Red" />
      <highlight-row condition="level == LogLevel.Fatal" foregroundColor="Red" backgroundColor="White" />
    </target>

    <!-- Development file with detailed info -->
    <target xsi:type="File"
            name="devFile"
            fileName="logs/dev-${shortdate}.log"
            layout="${devLayout}"
            archiveFileName="logs/archives/dev-{#}.log"
            archiveEvery="Day"
            archiveNumbering="Rolling"
            maxArchiveFiles="3" />

    <!-- Debug output for Visual Studio -->
    <target xsi:type="Debugger"
            name="debugOutput"
            layout="${time} [${level:uppercase=true}] ${logger:shortName=true} - ${message}" />
  </targets>

  <rules>
    <!-- Show everything in development -->
    <logger name="*" minlevel="Trace" writeTo="devConsole" />
    <logger name="*" minlevel="Debug" writeTo="devFile" />
    <logger name="*" minlevel="Debug" writeTo="debugOutput" />
    
    <!-- Reduce Microsoft framework noise but still show warnings -->
    <logger name="Microsoft.*" minlevel="Warn" writeTo="devConsole" final="true" />
    <logger name="System.*" minlevel="Warn" writeTo="devConsole" final="true" />
  </rules>
</nlog>