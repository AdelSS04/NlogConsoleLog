<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="logs/internal-nlog.txt">

  <variable name="defaultLayout" value="${longdate} [${level:uppercase=true}] ${logger:shortName=true} - ${message} ${exception:format=tostring}" />
  <variable name="detailedLayout" value="${longdate} [${level:uppercase=true}] ${logger} ${callsite:className=true:methodName=true:fileName=false:includeSourcePath=false} - ${message} ${exception:format=tostring}" />
  <variable name="jsonLayout" value='{"timestamp":"${longdate}","level":"${level:uppercase=true}","logger":"${logger:shortName=true}","message":"${message}","exception":"${exception:format=tostring}","callsite":"${callsite:className=true:methodName=true:fileName=false}","thread":"${threadid}","processid":"${processid}"}' />

  <targets>
    <target xsi:type="ColoredConsole" 
            name="coloredConsole"
            layout="${time} [${level:uppercase=true:padding=-5}] ${logger:shortName=true} - ${message} ${exception:format=tostring}"
            useDefaultRowHighlightingRules="false">
      <highlight-row condition="level == LogLevel.Debug" foregroundColor="DarkGray" />
      <highlight-row condition="level == LogLevel.Info" foregroundColor="Gray" />
      <highlight-row condition="level == LogLevel.Warn" foregroundColor="Yellow" />
      <highlight-row condition="level == LogLevel.Error" foregroundColor="Red" />
      <highlight-row condition="level == LogLevel.Fatal" foregroundColor="Red" backgroundColor="White" />
    </target>

    <target xsi:type="Console" 
            name="console"
            layout="${defaultLayout}" />

    <target xsi:type="File"
            name="fileTarget"
            fileName="logs/nlog-${shortdate}.log"
            layout="${detailedLayout}"
            archiveFileName="logs/archives/nlog-{#}.log"
            archiveEvery="Day"
            archiveNumbering="Rolling"
            maxArchiveFiles="7"
            concurrentWrites="true"
            keepFileOpen="false" />

    <target xsi:type="File"
            name="jsonFileTarget"
            fileName="logs/nlog-${shortdate}.json"
            layout="${jsonLayout}"
            archiveFileName="logs/archives/nlog-{#}.json"
            archiveEvery="Day"
            archiveNumbering="Rolling"
            maxArchiveFiles="7" />

    <target xsi:type="File"
            name="errorFileTarget"
            fileName="logs/errors-${shortdate}.log"
            layout="${detailedLayout}"
            archiveFileName="logs/archives/errors-{#}.log"
            archiveEvery="Day"
            archiveNumbering="Rolling"
            maxArchiveFiles="30" />

    <target xsi:type="File"
            name="performanceFileTarget"
            fileName="logs/performance-${shortdate}.log"
            layout="${longdate} [${level:uppercase=true}] ${logger:shortName=true} - ${message} | Duration: ${event-properties:item=Duration}ms | ${exception:format=tostring}"
            archiveFileName="logs/archives/performance-{#}.log"
            archiveEvery="Day"
            archiveNumbering="Rolling"
            maxArchiveFiles="7" />

    <target xsi:type="Memory" 
            name="memoryTarget"
            layout="${defaultLayout}" />

    <target xsi:type="Null" 
            name="nullTarget" />

    <target xsi:type="Debugger"
            name="debuggerTarget"
            layout="${time} [${level:uppercase=true}] ${logger:shortName=true} - ${message}" />
  </targets>

  <rules>
    <logger name="*.PerformanceDemoService" minlevel="Trace" writeTo="performanceFileTarget" final="true" />
    
    <logger name="*" minlevel="Error" writeTo="errorFileTarget" />
    
    <logger name="*" minlevel="Trace" writeTo="coloredConsole" />
    
    <logger name="*" minlevel="Debug" writeTo="fileTarget" />
    
    <logger name="*" minlevel="Info" writeTo="jsonFileTarget" />
    
    <logger name="*" minlevel="Debug" writeTo="debuggerTarget" />

    <logger name="Microsoft.*" maxlevel="Info" final="true" />
    <logger name="System.Net.Http.*" maxlevel="Info" final="true" />
  </rules>
</nlog>